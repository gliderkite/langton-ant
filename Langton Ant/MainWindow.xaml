<Window x:Class="lant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d2d="clr-namespace:Direct2DInterop"
        xmlns:lant="clr-namespace:lant;assembly=LangtonAntEngine"
        Title="Langton's Ant" Height="500" Width="700" Icon="logo.png">

    <DockPanel LastChildFill="True">

        <!-- Status bar -->
        <StatusBar DockPanel.Dock="Bottom" Height="20" HorizontalContentAlignment="Stretch">
            <TextBlock x:Name="StatusTextBlock" />
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock HorizontalAlignment="Right" FontStyle="Italic">2017 Marco Conte</TextBlock>
            </StatusBarItem>
        </StatusBar>

        <!-- Render target -->
        <d2d:Viewport x:Name="Viewport" BuildWindowCoreCompleted="Viewport_BuildWindowCoreCompleted" />

    </DockPanel>
    
</Window>
